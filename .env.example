# --- Model (default) ---
PROVIDER=openai
OPENAI_MODEL=gpt-4o   

# If using OpenAI
OPENAI_API_KEY='sk-'
LANGWATCH_API_KEY='sk-'

# If using Anthropic
# ANTHROPIC_API_KEY=...

# If using Google Gemini
# GOOGLE_API_KEY=...

# Optional: Ollama / LM Studio (OpenAI-compatible)
# OPENAI_BASE_URL=http://host.docker.internal:11434/v1
# OPENAI_API_KEY=ollama
# OPENAI_MODEL=llama3.1:8b

# --- Chroma Cloud ---
CHROMA_SSL=true
CHROMA_HOST=api.trychroma.com
CHROMA_PORT=8000
CHROMA_TENANT=xxx
CHROMA_DATABASE=n8n
CHROMA_TOKEN=xxx

# --- Indexing ---
RUN_INDEX_ON_START=false

# --- Retrieval knobs (favor examples over docs) ---
USE_RERANKER=false        # start without; turn on later if you want extra polish
RETRIEVE_K=16             # retrieve a bit wider
KEEP_K=8                  # keep more candidates before packing
MIN_CONTEXT_HITS=4
REQUIRE_CONTEXT=false
QUERY_EXPANSION=true

# --- Admin for /reindex ---
ADMIN_TOKEN=change-me
